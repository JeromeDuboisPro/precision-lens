{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://precisionlens.io/schemas/trace.json",
  "title": "PrecisionLens Trace Data",
  "description": "Schema for floating-point precision trace data generated by PrecisionLens",
  "type": "object",
  "required": ["metadata", "trace", "summary"],
  "properties": {
    "metadata": {
      "type": "object",
      "description": "Metadata about the trace execution",
      "required": [
        "precision",
        "dtype",
        "dtype_bytes",
        "condition_number",
        "matrix_size",
        "converged",
        "final_error",
        "tolerance",
        "max_iterations"
      ],
      "properties": {
        "precision": {
          "type": "string",
          "enum": ["FP64", "FP32", "FP16", "FP8"],
          "description": "Floating-point precision used"
        },
        "dtype": {
          "type": "string",
          "description": "NumPy dtype representation"
        },
        "dtype_bytes": {
          "type": "integer",
          "minimum": 1,
          "description": "Number of bytes per value"
        },
        "condition_number": {
          "type": "number",
          "description": "Matrix condition number"
        },
        "matrix_size": {
          "type": "integer",
          "minimum": 1,
          "description": "Size of the matrix (n x n)"
        },
        "true_eigenvalue": {
          "type": "number",
          "description": "True dominant eigenvalue"
        },
        "timestamp": {
          "type": "string",
          "format": "date-time",
          "description": "ISO 8601 timestamp of execution"
        },
        "converged": {
          "type": "boolean",
          "description": "Whether the algorithm converged"
        },
        "convergence_iteration": {
          "type": ["integer", "null"],
          "description": "Iteration number where convergence occurred, or null"
        },
        "final_error": {
          "type": "number",
          "minimum": 0,
          "description": "Final relative error"
        },
        "tolerance": {
          "type": "number",
          "exclusiveMinimum": 0,
          "description": "Convergence tolerance"
        },
        "max_iterations": {
          "type": "integer",
          "minimum": 1,
          "description": "Maximum iterations allowed"
        }
      }
    },
    "trace": {
      "type": "array",
      "description": "Array of iteration data points",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": [
          "iteration",
          "wall_time",
          "cumulative_time",
          "eigenvalue",
          "relative_error",
          "vector_norm",
          "theoretical_flops",
          "theoretical_bandwidth_gbps",
          "ops_count",
          "bytes_transferred"
        ],
        "properties": {
          "iteration": {
            "type": "integer",
            "minimum": 0,
            "description": "Iteration number"
          },
          "wall_time": {
            "type": "number",
            "minimum": 0,
            "description": "Wall clock time for this iteration (seconds)"
          },
          "cumulative_time": {
            "type": "number",
            "minimum": 0,
            "description": "Cumulative wall clock time (seconds)"
          },
          "eigenvalue": {
            "type": "number",
            "description": "Computed eigenvalue at this iteration"
          },
          "relative_error": {
            "type": "number",
            "minimum": 0,
            "description": "Relative error compared to true eigenvalue"
          },
          "vector_norm": {
            "type": "number",
            "minimum": 0,
            "description": "Norm of the eigenvector"
          },
          "theoretical_flops": {
            "type": "number",
            "minimum": 0,
            "description": "Theoretical FLOPS for this iteration"
          },
          "theoretical_bandwidth_gbps": {
            "type": "number",
            "minimum": 0,
            "description": "Theoretical bandwidth in GB/s"
          },
          "ops_count": {
            "type": "integer",
            "minimum": 0,
            "description": "Number of floating-point operations"
          },
          "bytes_transferred": {
            "type": "integer",
            "minimum": 0,
            "description": "Number of bytes transferred"
          }
        }
      }
    },
    "summary": {
      "type": "object",
      "description": "Summary statistics for the entire trace",
      "required": [
        "total_iterations",
        "total_time_seconds",
        "avg_flops",
        "peak_flops",
        "avg_bandwidth_gbps",
        "peak_bandwidth_gbps",
        "total_ops",
        "total_bytes"
      ],
      "properties": {
        "total_iterations": {
          "type": "integer",
          "minimum": 0,
          "description": "Total number of iterations executed"
        },
        "total_time_seconds": {
          "type": "number",
          "minimum": 0,
          "description": "Total execution time in seconds"
        },
        "time_to_1e3_error": {
          "type": ["number", "null"],
          "description": "Time to reach 1e-3 error, or null"
        },
        "time_to_1e6_error": {
          "type": ["number", "null"],
          "description": "Time to reach 1e-6 error, or null"
        },
        "time_to_1e9_error": {
          "type": ["number", "null"],
          "description": "Time to reach 1e-9 error, or null"
        },
        "avg_flops": {
          "type": "number",
          "minimum": 0,
          "description": "Average FLOPS across all iterations"
        },
        "peak_flops": {
          "type": "number",
          "minimum": 0,
          "description": "Peak FLOPS achieved"
        },
        "avg_bandwidth_gbps": {
          "type": "number",
          "minimum": 0,
          "description": "Average bandwidth in GB/s"
        },
        "peak_bandwidth_gbps": {
          "type": "number",
          "minimum": 0,
          "description": "Peak bandwidth in GB/s"
        },
        "total_ops": {
          "type": "integer",
          "minimum": 0,
          "description": "Total floating-point operations"
        },
        "total_bytes": {
          "type": "integer",
          "minimum": 0,
          "description": "Total bytes transferred"
        }
      }
    }
  }
}
